Vagrant.configure("2") do |config|
    config.vm.box = "generic/alpine318"
    config.vm.box_version = "4.3.12"

    config.vm.synced_folder ".", "/vagrant", type: "virtualbox", SharedFoldersEnableSymlinksCreate: false

    config.vm.define "lseillerS" do |server|
        server.vm.hostname = "lseillerS"
        server.vm.network "private_network", ip: "192.168.56.110"
        server.vm.provider "virtualbox" do |v|
            v.memory = 8192
            v.cpus = 4
            v.name = "lseillerS"
        end
        server.vm.provision "shell", path: "provisions/install-k3s-server.sh", env: {"PASSWORD": ENV["PASSWORD"]}
        server.vm.provision "shell", path: "provisions/uninstall-k3s.sh", name: "uninstall-k3s", run: "never"
    end

    config.vm.define "lseillerSW" do |worker|
        worker.vm.hostname = "lseillerSW"
        worker.vm.network "private_network", ip: "192.168.56.111"
        worker.vm.provider "virtualbox" do |v|
            v.memory = 4096
            v.cpus = 2
            v.name = "lseillerSW"
        end
        worker.vm.provision "shell", path: "provisions/install-k3s-agent.sh", env: {"PASSWORD": ENV["PASSWORD"]}
        worker.vm.provision "shell", path: "provisions/uninstall-k3s.sh", name: "uninstall-k3s", run: "never"
    end
end
